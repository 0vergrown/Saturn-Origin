{
    "name":"§6§nGravity Manipulation",
    "description":"The user manipulates/distort/warp space and can fluctuate gravity and create force zones using it. Allowing them to float, using positive energy and combing it with limitless you can boost yourself forward and fly properly. §f[Secondary]",
    "type":"origins:multiple",
    "badges":[
       {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/toggle.png",
         "text":[
           "Toggleable with [",
           {
             "keybind":"key.origins.secondary_active"
           },
           "] key."
         ]
       },
       {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/info.png",
         "text":[
           "To ascend, simply press or hold the [",
           {
             "keybind":"key.jump"
           },
           "] key; to descend, hold [",
           {
             "keybind":"key.sneak"
           },
           "]. Pressing your [",
           {
             "keybind":"key.sprint"
           },
           "] key will toggle your flight mode."
         ]
       },
       {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/active.png",
         "text":[
           "While in flight mode, use the [",
           {
             "keybind":"key.jump"
           },
           "] again to boost your speed, soaring effortlessly through the air."
         ]
       }
    ],
    "toggle":{
       "type":"origins:toggle",
       "active_by_default":false,
       "key":{
          "key":"key.origins.secondary_active",
          "continuous":false
       },
       "retain_state":false
    },
    "climb_up":{
       "type":"origins:climbing",
       "allow_holding":false,
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"saturn:gravity_manipulation_toggle",
                "inverted":false
             },
             {
                "type":"origins:sprinting",
                "inverted":true
             },
             {
                "type":"origins:sneaking",
                "inverted":true
             }
          ]
       }
    },
    "hover":{
       "type":"origins:action_over_time",
       "entity_action":{
          "type":"origins:apply_effect",
          "effect":{
             "effect":"minecraft:levitation",
             "duration":10,
             "amplifier":-1,
             "is_ambient":true,
             "show_particles":false,
             "show_icon":false
          }
       },
       "falling_action":{
          "type":"origins:clear_effect",
          "effect":"minecraft:levitation"
       },
       "interval":5,
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"saturn:gravity_manipulation_toggle",
                "inverted":false
             },
             {
                "type":"origins:sprinting",
                "inverted":true
             },
             {
                "type":"origins:sneaking",
                "inverted":true
             },
             {
                "type":"origins:on_block",
                "inverted":true
             }
          ]
       }
    },
    "hover_down":{
       "type":"origins:action_over_time",
       "entity_action":{
          "type":"origins:apply_effect",
          "effect":{
             "effect":"minecraft:slow_falling",
             "duration":10,
             "amplifier":0,
             "is_ambient":true,
             "show_particles":false,
             "show_icon":false
          }
       },
       "falling_action":{
          "type":"origins:clear_effect",
          "effect":"minecraft:slow_falling"
       },
       "interval":5,
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"saturn:gravity_manipulation_toggle",
                "inverted":false
             },
             {
                "type":"origins:or",
                "conditions":[
                   {
                      "type":"origins:sprinting"
                   },
                   {
                      "type":"origins:sneaking"
                   }
                ]
             },
             {
                "type":"origins:on_block",
                "inverted":true
             }
          ]
       }
    },
    "elytra":{
       "type":"origins:elytra_flight",
       "render_elytra":false,
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"saturn:gravity_manipulation_toggle",
                "inverted":false
             },
             {
                "type":"origins:sprinting"
             },
             {
                "type":"origins:on_block",
                "inverted":true
             }
          ]
       }
    },
    "velocity_boost_normal":{
       "type":"origins:active_self",
       "entity_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:add_velocity",
                "x":0.0,
                "y":0.0,
                "z":0.7,
                "space":"local",
                "client":true,
                "server":true,
                "set":false
             },
             {
               "type": "origins:spawn_particles",
               "particle": "minecraft:enchant",
               "count": 1000,
               "speed": 0.15,
               "force": true,
               "spread": {
                   "x": 1.0,
                   "y": 1.0,
                   "z": 1.0
               },
               "offset_y": -0.5
             }
          ]
       },
       "cooldown":50,
       "hud_render":{
          "should_render":true,
          "sprite_location":"origins:textures/gui/resource_bar.png",
          "bar_index":4
       },
       "key":{
          "key":"key.jump",
          "continuous":true
       },
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"saturn:gravity_manipulation_toggle",
                "inverted":false
             },
             {
                "type":"origins:fall_flying"
             },
             {
                "type":"origins:sprinting"
             },
             {
                "type":"origins:sneaking",
                "inverted":true
             }
          ]
       }
    },
    "velocity_boost_heavy_armor":{
       "type":"origins:active_self",
       "entity_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:add_velocity",
                "x":0.0,
                "y":0.0,
                "z":0.3,
                "space":"local",
                "client":true,
                "server":true,
                "set":false
             },
             {
               "type": "origins:spawn_particles",
               "particle": "minecraft:enchant",
               "count": 1000,
               "speed": 0.15,
               "force": true,
               "spread": {
                   "x": 1.0,
                   "y": 1.0,
                   "z": 1.0
               },
               "offset_y": -0.5
             }
          ]
       },
       "cooldown":70,
       "hud_render":{
          "should_render":true,
          "sprite_location":"origins:textures/gui/resource_bar.png",
          "bar_index":4
       },
       "key":{
          "key":"key.jump",
          "continuous":true
       },
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"saturn:gravity_manipulation_toggle",
                "inverted":false
             },
             {
                "type":"origins:fall_flying"
             },
             {
                "type":"origins:sprinting"
             },
             {
                "type":"origins:sneaking",
                "inverted":true
             }
          ]
       }
    }
}